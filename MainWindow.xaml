<Window x:Class="inuMixer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:inuMixer"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="inuMixer" Height="500" Width="800"
        MinHeight="300" MinWidth="300"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="5" CaptionHeight="0" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <ControlTemplate x:Key="MasterThumbTemplate" TargetType="{x:Type Thumb}">
            <Grid>
                <Image Source="pack://application:,,,/inuMixer;component/Resources/m_feeder.png" 
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Grid>
        </ControlTemplate>

        <ControlTemplate x:Key="NormalThumbTemplate" TargetType="{x:Type Thumb}">
            <Grid>
                <Image Source="pack://application:,,,/inuMixer;component/Resources/n_feeder.png" 
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Grid>
        </ControlTemplate>

        <ControlTemplate x:Key="MasterSliderTemplate" TargetType="{x:Type Slider}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto" MinWidth="6"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TickBar x:Name="BottomTick" Grid.Column="2" Visibility="Visible" Fill="#AAAAAA" Placement="Right" Width="4" Margin="2,0,0,0"/>
                <Border Grid.Column="1" BorderBrush="#888888" BorderThickness="1" Background="#333333" Width="4" HorizontalAlignment="Center" CornerRadius="0"/>
                <Track Grid.Column="1" x:Name="PART_Track" Orientation="Vertical">
                    <Track.DecreaseRepeatButton>
                        <RepeatButton Command="{x:Static Slider.DecreaseLarge}" Opacity="0" IsTabStop="False"/>
                    </Track.DecreaseRepeatButton>
                    <Track.IncreaseRepeatButton>
                        <RepeatButton Command="{x:Static Slider.IncreaseLarge}" Opacity="0" IsTabStop="False"/>
                    </Track.IncreaseRepeatButton>
                    <Track.Thumb>
                        <Thumb Template="{StaticResource MasterThumbTemplate}" Width="30" Height="30"/>
                    </Track.Thumb>
                </Track>
            </Grid>
        </ControlTemplate>

        <Style x:Key="MasterSliderStyle" TargetType="{x:Type Slider}">
            <Setter Property="Template" Value="{StaticResource MasterSliderTemplate}"/>
            <Setter Property="TickPlacement" Value="BottomRight"/>
            <Setter Property="IsMoveToPointEnabled" Value="True"/>
        </Style>

        <ControlTemplate x:Key="NormalSliderTemplate" TargetType="{x:Type Slider}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto" MinWidth="6"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TickBar x:Name="BottomTick" Grid.Column="2" Visibility="Visible" Fill="#AAAAAA" Placement="Right" Width="4" Margin="2,0,0,0"/>
                <Border Grid.Column="1" BorderBrush="#888888" BorderThickness="1" Background="#333333" Width="4" HorizontalAlignment="Center" CornerRadius="0"/>
                <Track Grid.Column="1" x:Name="PART_Track" Orientation="Vertical">
                    <Track.DecreaseRepeatButton>
                        <RepeatButton Command="{x:Static Slider.DecreaseLarge}" Opacity="0" IsTabStop="False"/>
                    </Track.DecreaseRepeatButton>
                    <Track.IncreaseRepeatButton>
                        <RepeatButton Command="{x:Static Slider.IncreaseLarge}" Opacity="0" IsTabStop="False"/>
                    </Track.IncreaseRepeatButton>
                    <Track.Thumb>
                        <Thumb Template="{StaticResource NormalThumbTemplate}" Width="30" Height="30"/>
                    </Track.Thumb>
                </Track>
            </Grid>
        </ControlTemplate>

        <Style x:Key="NormalSliderStyle" TargetType="{x:Type Slider}">
            <Setter Property="Template" Value="{StaticResource NormalSliderTemplate}"/>
            <Setter Property="TickPlacement" Value="BottomRight"/>
            <Setter Property="IsMoveToPointEnabled" Value="True"/>
        </Style>

        <DataTemplate DataType="{x:Type local:AudioSessionModel}">
            <Border x:Name="AppFaderBorder" 
                    BorderBrush="#000000" BorderThickness="3" Margin="-1.5" Padding="5" Width="80" Background="#36445A"
                    
                    PreviewMouseLeftButtonDown="AppFader_PreviewMouseLeftButtonDown"
                    PreviewMouseMove="AppFader_PreviewMouseMove"
                    PreviewMouseLeftButtonUp="AppFader_PreviewMouseLeftButtonUp"
                    
                    PreviewMouseWheel="Border_PreviewMouseWheel" 
                    MouseDown="Border_MouseDown" 
                    Cursor="Hand"
                    ToolTip="ドラッグ: 移動 / スクロール: 音量調整 / 中クリック: ミュート">
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMuted}" Value="True">
                                <Setter Property="Opacity" Value="0.4"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <Image Source="{Binding Icon}" Width="32" Height="32" Margin="0,0,0,5" />
                        <TextBlock Text="{Binding DisplayName}" Foreground="#FFFFFF" HorizontalAlignment="Center" 
                                   TextTrimming="CharacterEllipsis" ToolTip="{Binding DisplayName}" FontSize="10" Margin="0,0,0,5" />
                        <TextBlock Text="{Binding VolumePercent, StringFormat={}{0}%}" 
                                   Foreground="#FFFFFF" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14" Margin="0,5,0,5" />
                    </StackPanel>
                    <Grid Grid.Row="1" Margin="0,10,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>

                        <Slider Grid.Column="0" Orientation="Vertical" 
                                Style="{StaticResource NormalSliderStyle}"
                                Minimum="0.0" Maximum="1.0" 
                                Value="{Binding Volume, Mode=TwoWay}"
                                HorizontalAlignment="Center"
                                TickFrequency="0.1"/>

                        <ProgressBar Grid.Column="1" Orientation="Vertical" Minimum="0.0" Maximum="1.0"
                                     Value="{Binding PeakValue, Mode=OneWay}"
                                     Background="#231B0E" Foreground="#FFFFFF" BorderThickness="0" Height="8"/>
                    </Grid>
                    <ToggleButton Grid.Row="2" Content="Mute" 
                                              IsChecked="{Binding IsMuted, Mode=TwoWay}"
                                              Foreground="White" FontWeight="Bold" 
                                              Background="#6B6B6B" 
                                              Margin="0,5,0,0">

                        <ToggleButton.Style>
                            <Style TargetType="{x:Type ToggleButton}">
                                <Setter Property="Background" Value="#6B6B6B"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ToggleButton}">
                                            <Border Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}"
                                                    CornerRadius="2">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter Property="Background" Value="#FF4D4D"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#7A7A7A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                </Grid>
            </Border>
        </DataTemplate>
        <Style x:Key="WindowControlButton" TargetType="{x:Type Button}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#333333"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CloseButton" TargetType="{x:Type Button}" BasedOn="{StaticResource WindowControlButton}">
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="#1E2229" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">

                        <CheckBox Content="常に手前に表示" 
                                  Foreground="White" 
                                  Style="{StaticResource MaterialDesignCheckBox}"  
                                  IsChecked="{Binding Topmost, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}" FontFamily="Yu Gothic UI"/>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="透明度:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <Slider Minimum="0.1" Maximum="1.0" Width="80" 
                                    Style="{StaticResource MaterialDesign3.MaterialDesignSlider}"  Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=Opacity}"
                                    IsMoveToPointEnabled="True" PreviewMouseWheel="OpacitySlider_PreviewMouseWheel"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5">
                        <Button Click="SettingsButton_Click" ToolTip="表示アプリの設定" Style="{StaticResource WindowControlButton}">
                            <materialDesign:PackIcon Kind="Cog" Width="20" Height="20"/>
                        </Button>

                        <Button Click="MinimizeButton_Click" ToolTip="最小化" Style="{StaticResource WindowControlButton}">
                            <materialDesign:PackIcon Kind="WindowMinimize" Width="20" Height="20"/>
                        </Button>

                        <Button Click="CloseButton_Click" ToolTip="閉じる" Style="{StaticResource CloseButton}">
                            <materialDesign:PackIcon Kind="WindowClose" Width="20" Height="20"/>
                        </Button>
                    </StackPanel>
                </Grid>

                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal">
                        <Border BorderBrush="#000000" BorderThickness="3" Margin="15,-1,-1.5,-1.5" Padding="5" Width="80" Background="#36445A"
                                PreviewMouseWheel="MasterFader_PreviewMouseWheel" 
                                MouseDown="MasterFader_MouseDown"
                                ToolTip="システム全体のマスター音量">
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding MasterIsMuted}" Value="True">
                                            <Setter Property="Opacity" Value="0.4"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0">
                                    <materialDesign:PackIcon Kind="MonitorSpeaker"  Width="32" Height="32"
                                                             HorizontalAlignment="Center" Margin="0,0,0,5"
                                                             Foreground="#FFFFFF" ToolTip="システム音量" />
                                    <TextBlock Text="MASTER" Foreground="#FFFFFF" HorizontalAlignment="Center" 
                                               FontWeight="Normal" FontSize="10" Margin="0,0,0,5.5" />
                                    <TextBlock Text="{Binding MasterVolumePercent, StringFormat={}{0}%}" 
                                               Foreground="#FFFFFF" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14" Margin="0,4,0,5" />
                                </StackPanel>
                                <Grid Grid.Row="1" Margin="0,10,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                    </Grid.ColumnDefinitions>

                                    <Slider Grid.Column="0" Orientation="Vertical" 
                                            Style="{StaticResource MasterSliderStyle}"
                                            Minimum="0.0" Maximum="1.0"  
                                            Value="{Binding MasterVolume, Mode=TwoWay}"
                                            HorizontalAlignment="Center"
                                            TickFrequency="0.1" />

                                    <ProgressBar Grid.Column="1" Orientation="Vertical" Minimum="0.0" Maximum="1.0"
                                                 Value="{Binding MasterPeakValue, Mode=OneWay}"
                                                 Background="#231B0E" Foreground="#FFFFFF" BorderThickness="0" Height="8"/>
                                </Grid>
                                <ToggleButton Grid.Row="2" Content="Mute" 
                                              IsChecked="{Binding MasterIsMuted, Mode=TwoWay}"
                                              Foreground="White" FontWeight="Bold" 
                                              Background="#6B6B6B" 
                                              Margin="0,5,0,0">

                                    <ToggleButton.Style>
                                        <Style TargetType="{x:Type ToggleButton}">
                                            <Setter Property="Background" Value="#6B6B6B"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                        <Border Background="{TemplateBinding Background}"
                                                                Padding="{TemplateBinding Padding}"
                                                                CornerRadius="2">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Background" Value="#FF4D4D"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#7A7A7A"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>

                            </Grid>
                        </Border>

                        <ItemsControl ItemsSource="{Binding AudioSessions}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>