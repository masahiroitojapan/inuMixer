<Window x:Class="VolMixer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:VolMixer"
        Title="VolMixer" Height="500" Width="800"
        MinHeight="300" MinWidth="300"
        
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- ウィンドウのリサイズ機能を有効化（枠なしウィンドウ用） -->
    <WindowChrome.WindowChrome>
        <!-- ResizeBorderThickness="5": ウィンドウ端5pxをリサイズ操作エリアとする -->
        <!-- CaptionHeight="0": タイトルバー機能を無効化（自作するため） -->
        <WindowChrome ResizeBorderThickness="5" CaptionHeight="0" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- オーディオセッション（各アプリ）の表示テンプレート -->
        <DataTemplate DataType="{x:Type local:AudioSessionModel}">
            <Border BorderBrush="DarkGray" BorderThickness="1" Margin="5" Padding="5" Width="80" Background="#2C2C2C"
                    PreviewMouseWheel="Border_PreviewMouseWheel"
                    MouseDown="Border_MouseDown"
                    Cursor="Hand"
                    ToolTip="スクロール: 音量調整 / 中クリック: ミュート">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- 上部: アイコン、名前 -->
                        <RowDefinition Height="*"/>
                        <!-- 中部: フェーダー、メーター (可変) -->
                        <RowDefinition Height="Auto"/>
                        <!-- 下部: ミュートボタン -->
                    </Grid.RowDefinitions>

                    <!-- 上部情報 -->
                    <StackPanel Grid.Row="0">
                        <Image Source="{Binding Icon}" Width="32" Height="32" Margin="0,0,0,5" />
                        <TextBlock Text="{Binding DisplayName}" Foreground="White" HorizontalAlignment="Center" 
                                   TextTrimming="CharacterEllipsis" ToolTip="{Binding DisplayName}" FontSize="10" />
                        <TextBlock Text="{Binding VolumePercent, StringFormat={}{0}%}" 
                                   Foreground="#00AEEF" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14" 
                                   Margin="0,5,0,5" />
                    </StackPanel>

                    <!-- フェーダー＆メーター -->
                    <Grid Grid.Row="1" Margin="0,10,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>

                        <!-- 音量スライダー -->
                        <Slider Grid.Column="0"
                                Orientation="Vertical" 
                                Minimum="0.0" Maximum="1.0" 
                                Value="{Binding Volume, Mode=TwoWay}"
                                HorizontalAlignment="Center"
                                TickPlacement="BottomRight" 
                                TickFrequency="0.1" 
                                IsMoveToPointEnabled="True"/>
                        <!-- クリック位置へ移動 -->

                        <!-- ピークメーター -->
                        <ProgressBar Grid.Column="1"
                                     Orientation="Vertical"
                                     Minimum="0.0" Maximum="1.0"
                                     Value="{Binding PeakValue, Mode=OneWay}"
                                     Background="#444444"
                                     Foreground="#FFFFFF"
                                     BorderThickness="0"/>
                    </Grid>

                    <!-- ミュートボタン -->
                    <ToggleButton Grid.Row="2" Content="Mute" IsChecked="{Binding IsMuted, Mode=TwoWay}"
                                  Foreground="White" FontWeight="Bold" Background="#6B6B6B" />

                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <!-- メインレイアウト -->
    <Grid>
        <Border Background="#1E1E1E" CornerRadius="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- コントロールバー -->
                    <RowDefinition Height="*"/>
                    <!-- ミキサーエリア -->
                </Grid.RowDefinitions>

                <!-- 左上の設定コントロール -->
                <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
                    <!-- 更新ボタン -->
                    <Button Content="&#x21BB; 更新" 
                            Command="{Binding RefreshCommand}" 
                            Padding="10,5"
                            Background="#505050" 
                            Foreground="White" 
                            BorderBrush="#808080"
                            HorizontalAlignment="Left"/>

                    <!-- 最前面表示 -->
                    <CheckBox Content="常に手前に表示" 
                              Foreground="White" 
                              Margin="0,10,0,0"
                              IsChecked="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=Topmost, Mode=TwoWay}" />

                    <!-- 透明度スライダー -->
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="透明度:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <Slider Minimum="0.1" Maximum="1.0" Width="100" 
                                Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=Opacity, Mode=TwoWay}" 
                                IsMoveToPointEnabled="True"
                                TickPlacement="BottomRight"
                                TickFrequency="0.1" 
                                PreviewMouseWheel="OpacitySlider_PreviewMouseWheel"/>
                    </StackPanel>
                </StackPanel>

                <!-- 右上のウィンドウ操作ボタン -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5">
                    <!-- 最小化 -->
                    <Button Content="＿" 
                            Click="MinimizeButton_Click"
                            Width="30" Height="25"
                            Margin="0,0,5,0"
                            Background="#505050" 
                            Foreground="White" 
                            BorderBrush="#808080"
                            ToolTip="最小化"/>

                    <!-- 閉じる -->
                    <Button Content="✕" 
                            Click="CloseButton_Click"
                            Width="30" Height="25"
                            Background="#00AEEF" 
                            Foreground="White" 
                            BorderBrush="#808080"
                            FontWeight="Bold"
                            ToolTip="閉じる"/>
                </StackPanel>

                <!-- メインのミキサー部分 (スクロール可能) -->
                <ScrollViewer Grid.Row="1" 
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding AudioSessions}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <!-- 横並び配置 -->
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>