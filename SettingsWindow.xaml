<Window x:Class="inuMixer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="設定" Height="480" Width="340"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">

    <Border Background="#1E1E1E" BorderBrush="#555555" BorderThickness="1" CornerRadius="3">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" 
           Source="pack://application:,,,/inuMixer;component/Resources/logo.png" 
           Width="50" Height="50" 
           RenderOptions.BitmapScalingMode="HighQuality"
           Margin="0,0,15,0"/>

                <Grid Grid.Column="1" VerticalAlignment="Center" Cursor="">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="inuMixer" Foreground="White" FontSize="20" FontWeight="Bold"/>

                    <DockPanel Grid.Row="1" LastChildFill="False" Margin="0,2,0,0">
                        <TextBlock x:Name="VersionText" Text="v1.0.1" Foreground="#AAAAAA" 
                       FontSize="14" VerticalAlignment="Center" DockPanel.Dock="Left"/>

                        <Button Click="CheckUpdate_Click" DockPanel.Dock="Right"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Foreground="#00AEEF" Height="24" Padding="4,0" FontSize="14"
                    Content="アップデートを確認" Cursor="Hand"/>
                    </DockPanel>
                </Grid>
            </Grid>

            <Border Grid.Row="3" BorderBrush="#444444" BorderThickness="1" Background="#252525" CornerRadius="2">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="AppListControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#333333" BorderThickness="0,0,0,1" Padding="10">
                                    <CheckBox IsChecked="{Binding IsVisible}" Cursor="Hand">
                                        <TextBlock Text="{Binding Name}" Foreground="White" Margin="5,0,0,0"/>
                                    </CheckBox>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button Click="SaveButton_Click" Width="90" Height="32" Margin="0,0,12,0" 
                        Background="#00AEEF" Foreground="White" BorderThickness="0" 
                        ToolTip="設定を保存して終了">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" Width="18" Height="18" Margin="0,0,5,0"/>
                        <TextBlock Text="保存" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Click="CancelButton_Click" Width="90" Height="32" 
                        Background="#444444" Foreground="White" BorderThickness="0" 
                        ToolTip="変更を破棄して戻る">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CloseCircleOutline" Width="18" Height="18" Margin="0,0,5,0"/>
                        <TextBlock Text="戻る" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>