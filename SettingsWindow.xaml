<Window x:Class="VolMixer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="設定" Height="400" Width="300"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">

    <Border Background="#1E1E1E" BorderBrush="#555555" BorderThickness="1" CornerRadius="3">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="表示するアプリを選択" Foreground="White" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>

            <Border Grid.Row="1" BorderBrush="#444444" BorderThickness="1" Background="#252525">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="AppListControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#333333" BorderThickness="0,0,0,1" Padding="10">
                                    <CheckBox IsChecked="{Binding IsVisible}" Cursor="Hand">
                                        <TextBlock Text="{Binding Name}" Foreground="White" Margin="5,0,0,0"/>
                                    </CheckBox>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,5">
                <Button Content="保存" Click="SaveButton_Click" Width="80" Height="30" Margin="0,0,10,0" Background="#00AEEF" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
                <Button Content="キャンセル" Click="CancelButton_Click" Width="80" Height="30" Background="#555555" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>